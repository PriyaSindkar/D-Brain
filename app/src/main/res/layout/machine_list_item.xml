<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/primaryColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearSwitch"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/VS_MARGIN"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/S_MARGIN"
                    android:padding="@dimen/VS_MARGIN"
                    android:singleLine="true"
                    android:id="@+id/txtMachineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine Name"
                    android:textColor="@color/white"
                    android:src="@drawable/ic_arrow_left"/>

                <TextView
                    android:layout_marginLeft="@dimen/S_MARGIN"
                    android:padding="@dimen/VS_MARGIN"
                    android:id="@+id/txtMachineIPAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine IP Address"
                    android:textColor="@color/white"
                    android:src="@drawable/ic_arrow_left"/>

                <TextView
                    android:layout_marginLeft="@dimen/S_MARGIN"
                    android:padding="@dimen/VS_MARGIN"
                    android:id="@+id/txtMachineSerialNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine Serial Number"
                    android:textColor="@color/white"
                    android:src="@drawable/ic_arrow_left"/>

            </LinearLayout>

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/STD_MARGIN"
                layout="@layout/machine_options_item"/>



    </LinearLayout>


</LinearLayout>