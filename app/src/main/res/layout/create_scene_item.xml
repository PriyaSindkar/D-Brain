<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linearItem"
    android:background="@color/primaryColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:padding="@dimen/STD_MARGIN"
            android:id="@+id/txtItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imgDeleteOption"
            android:background="@drawable/white_border_circle"
            android:src="@drawable/ic_action_delete"
            android:padding="@dimen/STD_MARGIN"
            android:layout_marginLeft="@dimen/STD_MARGIN"
            android:layout_marginRight="@dimen/STD_MARGIN"
            android:layout_marginTop="@dimen/S_MARGIN"
            android:layout_width="@dimen/POPUP_BAR_ICON_SIZE"
            android:layout_height="@dimen/POPUP_BAR_ICON_SIZE" />

    </LinearLayout>

    <TextView
        android:padding="@dimen/STD_MARGIN"
        android:id="@+id/txtMachineIPAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Machine IP"
        android:textColor="@color/white"/>


</LinearLayout>