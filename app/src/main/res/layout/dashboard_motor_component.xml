<?xml version="1.0" encoding="utf-8"?>



    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parentMotor"
        android:layout_width="@dimen/DASHBOARD_CARD_WIDTH"
        android:layout_height="@dimen/DASHBOARD_CARD_HEIGHT"
        android:gravity="center"
        android:background="@color/primaryColorTint">

        <TextView
            android:layout_gravity="top|right"
            android:id="@+id/txtNoOfMotorUnits"
            android:padding="@dimen/S_MARGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="@dimen/M_TEXT_SIZE"
            android:background="@drawable/tag"
            android:text=""/>

        <LinearLayout
            android:padding="@dimen/STD_MARGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:layout_width="@dimen/POPUP_BAR_ICON_SIZE"
                android:layout_height="@dimen/POPUP_BAR_ICON_SIZE"
                android:padding="@dimen/STD_MARGIN"
                android:src="@drawable/ic_motors"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="@dimen/S_MARGIN"
                android:layout_gravity="center"
                android:text="Motor"/>
        </LinearLayout>

    </FrameLayout>
