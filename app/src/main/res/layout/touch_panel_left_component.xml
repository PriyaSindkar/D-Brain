<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="visible"
    android:id="@+id/leftParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <GridView
        android:layout_above="@+id/bottomComponentType"
        android:id="@+id/gridComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></GridView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/bottomComponentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/primaryColor"
            android:id="@+id/linearSwitch"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textColor="#fff"

            android:padding="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/line1"
            android:background="#fff"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:background="@color/primaryColor"
            android:id="@+id/linearDimmer"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textColor="#fff"
            android:padding="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Dimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="#fff"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/primaryColor"
            android:id="@+id/linearMotor"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textColor="#fff"
            android:padding="16dp"
            android:gravity="center"
            android:text="Motor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    </RelativeLayout>