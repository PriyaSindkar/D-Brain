<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linearMachine"
    android:background="@color/primaryColor"
    android:layout_width="wrap_content"
    android:padding="@dimen/S_MARGIN"
    android:layout_height="wrap_content">

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/imgSwitch"
        android:layout_gravity="center"
        style="@style/MaterialDesignStyle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgRenameOption"
        android:background="@drawable/white_border_circle"
        android:src="@drawable/ic_edit"
        android:padding="@dimen/STD_MARGIN"
        android:layout_marginRight="@dimen/STD_MARGIN"
        android:layout_width="@dimen/POPUP_BAR_ICON_SIZE"
        android:layout_height="@dimen/POPUP_BAR_ICON_SIZE" />


    <ImageView
        android:id="@+id/imgDeleteOption"
        android:background="@drawable/white_border_circle"
        android:src="@drawable/ic_action_delete"
        android:padding="@dimen/STD_MARGIN"
        android:layout_width="@dimen/POPUP_BAR_ICON_SIZE"
        android:layout_height="@dimen/POPUP_BAR_ICON_SIZE" />
    </LinearLayout>
</LinearLayout>